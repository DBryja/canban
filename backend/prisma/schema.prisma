generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String     // Hashed password for JWT auth
  isAdmin   Boolean    @default(false) // Admin can create projects and invite users
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  createdProjects Project[]        @relation("ProjectCreator")
  projectMembers  ProjectMember[]  // User's memberships in projects
  createdTasks    Task[]           @relation("TaskCreator")
  assignedTasks   Task[]           @relation("TaskAssignee")
  comments        Comment[]

  @@index([isAdmin])
}

// Project model
model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  creatorId   String   // Admin who created the project
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creator         User              @relation("ProjectCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members         ProjectMember[]   // Project members with roles
  tasks           Task[]
  invitations     ProjectInvitation[]
  columns         ProjectColumn[]   // Project columns for kanban board

  @@index([creatorId])
}

// ProjectMember - junction table for User-Project relationship with role
enum ProjectRole {
  Guest      // Can only view project content
  Maintainer // Can view and edit project content
}

model ProjectMember {
  id        String      @id @default(cuid())
  userId    String
  projectId String
  role      ProjectRole @default(Guest)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId]) // User can have only one role per project
  @@index([userId])
  @@index([projectId])
}

// TaskTag model
model TaskTag {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String?  // Optional color for UI
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tasks        Task[]          @relation("TaskTags")
  mainTagTasks Task[]          @relation("TaskMainTag")
  columns      ProjectColumn[] // Columns that use this tag

  @@index([name])
}

// Task model
model Task {
  id          String    @id @default(cuid())
  title       String
  description String?
  projectId   String
  creatorId   String
  assigneeId  String?   // User assigned to this task
  mainTagId   String?   // Main tag for grouping
  number      Int       // Task number within project (starts from 1)
  date        DateTime? // Optional date
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  creator     User      @relation("TaskCreator", fields: [creatorId], references: [id])
  assignee    User?     @relation("TaskAssignee", fields: [assigneeId], references: [id])
  mainTag     TaskTag?  @relation("TaskMainTag", fields: [mainTagId], references: [id])
  tags        TaskTag[] @relation("TaskTags")
  columnOrders TaskColumnOrder[] // Task orders in columns
  comments    Comment[]

  @@unique([projectId, number]) // Task number must be unique within project
  @@index([projectId])
  @@index([creatorId])
  @@index([assigneeId])
  @@index([mainTagId])
  @@index([date])
}

// ProjectInvitation model - for project invitation links with expiration
model ProjectInvitation {
  id        String      @id @default(cuid())
  token     String      @unique // Unique invitation token
  projectId String
  role      ProjectRole @default(Guest) // Role to assign when accepting invitation
  expiresAt DateTime    // Expiration time
  used      Boolean     @default(false) // Whether invitation was used
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  project   Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([projectId])
  @@index([expiresAt])
}

// ProjectColumn model - columns for kanban board linked to tags
model ProjectColumn {
  id        String   @id @default(cuid())
  projectId String
  tagId     String   // Tag that defines this column
  order     Int      // Order of column in the board
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tag       TaskTag  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  taskOrders TaskColumnOrder[] // Task orders within this column

  @@unique([projectId, tagId]) // One tag can only be used once per project
  @@index([projectId])
  @@index([tagId])
  @@index([projectId, order]) // For ordering columns within a project
}

// TaskColumnOrder model - stores task order within columns
model TaskColumnOrder {
  id        String   @id @default(cuid())
  taskId    String
  columnId  String   // ProjectColumn id
  order     Int      // Order of task within the column
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  column    ProjectColumn @relation(fields: [columnId], references: [id], onDelete: Cascade)

  @@unique([taskId, columnId]) // One task can only have one order per column
  @@index([taskId])
  @@index([columnId])
  @@index([columnId, order]) // For ordering tasks within a column
}

// Comment model - comments on tasks
model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  authorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id])

  @@index([taskId])
  @@index([authorId])
}